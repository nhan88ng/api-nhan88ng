# Environment variables template
# Copy this file to .env and fill in your actual values

# MongoDB Atlas Configuration
MONGODB_TINASHOP_URL=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/nhan88ng_tinashop?retryWrites=true&w=majority
MONGODB_MICOCAH_URL=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/nhan88ng_micocah?retryWrites=true&w=majority
MONGODB_SHARED_URL=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/nhan88ng_shared?retryWrites=true&w=majority

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Nhan88ng API
VERSION=1.0.0

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Platform Name

# Frontend URLs
FRONTEND_URL=http://localhost:3000
TINASHOP_URL=http://localhost:3001
MICOCAH_URL=http://localhost:3002

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
LOG_LEVEL=info

# Test User Credentials
TEST_USER_PASSWORD=your_test_password

# Admin User Credentials (change in production)
ADMIN_TINASHOP_EMAIL=admin@tina.shop
ADMIN_TINASHOP_PASSWORD=your_secure_admin_password
ADMIN_MICOCAH_EMAIL=admin@micocah.vn
ADMIN_MICOCAH_PASSWORD=your_secure_admin_password

# Test Configuration
TEST_BASE_URL=http://localhost:8000
